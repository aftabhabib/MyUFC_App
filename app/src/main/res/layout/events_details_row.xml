<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="8dp"
    app:cardElevation="15dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tImgView"
            android:layout_width="140dp"
            android:layout_height="169dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tName"
            app:srcCompat="@mipmap/ic_launcher"></ImageView>

        <TextView
            android:id="@+id/tName"
            android:layout_width="187dp"
            android:layout_height="55dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorPrimary"
            android:text="Title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#fff"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/tName2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tWins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginStart="8dp"
            android:text="Record"
            android:textAlignment="textEnd"
            android:textColor="#fff"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/record"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Stats"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tImgView" />

        <TextView
            android:id="@+id/f1_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="height"
            android:textAlignment="textEnd"
            android:textColor="#fff"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/height"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="92dp"
            android:text="VS"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toStartOf="@+id/tImgViewF2"
            app:layout_constraintStart_toEndOf="@+id/tImgView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tImgViewF2"
            android:layout_width="140dp"
            android:layout_height="169dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tName2"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tName2"
            android:layout_width="183dp"
            android:layout_height="55dp"
            android:background="@color/colorPrimary"
            android:text="Title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#fff"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/f1_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="weight"
            android:background="@color/colorPrimaryDark"
            android:textAlignment="textEnd"
            android:textColor="#fff"
            app:layout_constraintBaseline_toBaselineOf="@+id/weight"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/WEIGHT"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/f2_weight"
            app:layout_constraintStart_toEndOf="@+id/f1_weight"
            app:layout_constraintTop_toBottomOf="@+id/height"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/Record"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/f2_record"
            app:layout_constraintStart_toEndOf="@+id/tWins"
            app:layout_constraintTop_toBottomOf="@+id/tTitle" />

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/HEIGHT"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/f2_height"
            app:layout_constraintStart_toEndOf="@+id/f1_height"
            app:layout_constraintTop_toBottomOf="@+id/record" />

        <TextView
            android:id="@+id/f2_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Record"
            android:textAlignment="textStart"
            android:textColor="#fff"
            app:layout_constraintBaseline_toBaselineOf="@+id/record"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/f2_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="height"
            android:textAlignment="textStart"
            android:textColor="#fff"
            app:layout_constraintBaseline_toBaselineOf="@+id/height"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/f2_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="weight"
            android:textAlignment="textStart"
            android:textColor="#fff"
            app:layout_constraintBaseline_toBaselineOf="@+id/weight"
            app:layout_constraintEnd_toEndOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
